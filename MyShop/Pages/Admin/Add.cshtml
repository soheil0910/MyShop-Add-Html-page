@page
@model MyShop.Pages.Admin.AddModel
@{
    ViewData["Title"] = "اضافه کردن ";
}


<h1>اضافه کردن</h1>


<form method="post" enctype="multipart/form-data">

    <label asp-for="ProductPage.Name"></label>
    <input asp-for="ProductPage.Name" class="form-control" />
    <span asp-validation-for="ProductPage.Name"></span>

    <label asp-for="ProductPage.Description"></label>
    <textarea asp-for="ProductPage.Description" class="form-control"></textarea>
    <span asp-validation-for="ProductPage.Description"></span>

    <label asp-for="ProductPage.Price"></label>
    <input asp-for="ProductPage.Price" class="form-control" />
    <span asp-validation-for="ProductPage.Price"></span>

    <label asp-for="ProductPage.QuantityInStock"></label>
    <input asp-for="ProductPage.QuantityInStock" class="form-control" />
    <span asp-validation-for="ProductPage.QuantityInStock"></span>
    <br />

    <label asp-for="ProductPage.Picture"></label>
    <input asp-for="ProductPage.Picture" />
    <span asp-validation-for="ProductPage.Picture"></span>
    <br />
    <br />
    <h2>گروه ها </h2>

    <div style="border:solid 1px ;display: inline-block;padding: 20px;">
    
    @{
        foreach (var item in Model.ProductPage.Category)
        {
            <label for="@item.Name">@item.Name</label>

                <input type="checkbox" id="@item.Name" name="backCategory" value="@item.Id" />
            
            <br />
        }}
    </div>

    <br />
    <br />
  

    <input type="submit" value="ذخیره" class="btn btn-success" />


</form>